# ============================================
# FinRecorder Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Database
# ============================================
# For local development (without Docker)
DATABASE_URL=postgres://finrecorder:YOUR_DB_PASSWORD@localhost:5432/finrecorder

# For Docker deployment (uses docker-compose service names)
# DATABASE_URL=postgres://finrecorder:YOUR_DB_PASSWORD@postgres:5432/finrecorder

# PostgreSQL settings (for docker-compose)
POSTGRES_USER=finrecorder
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=finrecorder
POSTGRES_PORT=5432

# ============================================
# NextAuth.js Authentication
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-change-in-production

# Google OAuth credentials
# Get from: https://console.cloud.google.com/
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# Application URL (IMPORTANT: must match your actual domain)
# For local development:
NEXTAUTH_URL=http://localhost:3000
# For production, also set AUTH_URL:
# AUTH_URL=https://your-domain.com

# ============================================
# Cron Jobs
# ============================================
# Secret for securing cron API endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-change-in-production

# ============================================
# Application Settings
# ============================================
# Application port (for Docker)
APP_PORT=3000

# Node environment
NODE_ENV=development

# ============================================
# Optional: External APIs
# ============================================
# Alpha Vantage API (backup for stock prices)
# Get from: https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
